{
  "name": "research-marker",
  "version": "1.0.0",
  "description": "A local research workflow tool",
  "author": "Amay Babel",
  "type": "module",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev:nuxt": "nuxt dev --dotenv .env.dev",
    "dev:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"pnpm run dev:nuxt\" \"pnpm run dev:electron\"",
    "generate": "nuxt generate --dotenv .env.prod",
    "build": "pnpm run generate && electron-builder",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare"
  },
  "dependencies": {
    "@nuxt/hints": "1.0.0-alpha.1",
    "@nuxt/icon": "2.1.0",
    "@nuxt/image": "2.0.0",
    "@nuxt/ui": "4.2.0",
    "@nuxtjs/tailwindcss": "6.14.0",
    "@pinia/nuxt": "0.11.3",
    "@recogito/pdf-annotator": "^1.6.0",
    "@tailwindcss/vite": "^4.1.17",
    "annotpdf": "^1.0.15",
    "d3": "^7.9.0",
    "dompurify": "^3.3.1",
    "katex": "^0.16.27",
    "marked": "^17.0.1",
    "marked-katex-extension": "^5.1.6",
    "nuxt": "^4.2.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.449",
    "pinia": "^3.0.4",
    "pinia-plugin-persistedstate": "^4.7.1",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "ufo": "^1.6.1",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@iconify-json/uil": "^1.2.3",
    "@tailwindcss/postcss": "^4.1.17",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.researchmarker.os",
    "productName": "Research Marker",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "electron/**/*",
      ".output/public/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/api",
        "to": "backend"
      }
    ],
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
